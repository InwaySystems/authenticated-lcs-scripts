{
    "manifestVersion": 1,
    "id": "authenticated-lcs-scripts",
    "publisher": "inway-fh",
    "version": "0.0.3",
    "name": "Authenticated LCS Scripts",
    "description": "Use a LCS service connection with scripts instead of pasting secrets into variables!",
    "categories": [
        "Azure Pipelines"
    ],
    "tags": [
        "service-connection",
        "authenticated",
        "bash",
        "powershell"
    ],
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "files": [
        {
            "path": "tasks/powershell"
        },
        {
            "path": "tasks/bash"
        },
        {
            "path": "docs",
            "addressable": true
        }
    ],
    "content": {
        "details": {
            "path": "docs/Overview.md"
        },
        "license": {
            "path": "LICENSE"
        }
    },
    "icons": {
        "default": "images/logo.png"
    },
    "links": {
        "home": {
            "uri": "https://github.com/InwaySystems/authenticated-lcs-scripts"
        },
        "repository": {
            "uri": "https://github.com/InwaySystems/authenticated-lcs-scripts"
        },
        "issues": {
            "uri": "https://github.com/InwaySystems/authenticated-lcs-scripts/issues"
        }
    },
    "repository": {
        "type": "git",
        "uri": "https://github.com/InwaySystems/authenticated-lcs-scripts"
    },
    "contributions": [
        {
            "id": "powershell-task",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "tasks/powershell"
            }
        },
        {
            "id": "bash-task",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "tasks/bash"
            }
        }
    ],
    "screenshots": [
        {
            "path": "docs/highlighted_env.png"
        }
    ]
}